## Database
DATABASE_URL="mysql://user:password@localhost:3306/login_global"

## JWT RS256 (Llaves asim√©tricas)
# Rutas a tus llaves RSA (deben generarse con openssl)
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem

## Server
PORT=3000
NODE_ENV=development

## Mail (para SMS con Twilio u otro)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

## Frontend URLs
FRONTEND_URL=http://localhost:3000

## Email Configuration
# Choose provider: 'gmail' or 'hostinger'
EMAIL_PROVIDER=gmail

# Gmail Configuration (when EMAIL_PROVIDER=gmail)
EMAIL_GMAIL_USER=tu-email@gmail.com
# App Password from Google Account Settings (not regular password)
EMAIL_GMAIL_APP_PASSWORD=tu-app-password-de-16-caracteres

# Hostinger Configuration (when EMAIL_PROVIDER=hostinger)
EMAIL_HOSTINGER_HOST=smtp.hostinger.com
EMAIL_HOSTINGER_PORT=587
EMAIL_HOSTINGER_USER=tu-email@tu-dominio.com
EMAIL_HOSTINGER_PASSWORD=tu-password-de-hostinger

# General Email Settings
EMAIL_FROM=noreply@tu-dominio.com

# Application Base URL (for activation links)
APP_BASE_URL=https://tu-dominio.com
